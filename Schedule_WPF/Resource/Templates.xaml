                        <KeyBinding Key="Delete" Command="{Binding Path=DeleteKeyCommand}" CommandParameter="{Binding RelativeSource={StaticResource ListViewParent}, Path=SelectedItem.Id}"/>
                    </ListView.InputBindings>
                    <ListView.View>
